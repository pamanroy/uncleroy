---
import Footer from '../components/Footer.astro'
import Head from '../components/Head.astro'
import Nav from '../components/Nav.astro'

interface Props {
  title?: string
  description?: string
  image?: string
}

const { title, description, image } = Astro.props
const permalink = Astro.url.href
const desc = description || 'Little things about Uncle Roy'

const prefix = title ? `${title} | ` : ''
const pageTitle = `${prefix}uncle roy`
---

<html lang="en">
  <Head title={pageTitle} description={desc} {image} {permalink} />
  <body class="min-h-screen flex flex-col transition-all text-sm md:text-base">
    <div class="absolute top-[-60px] inset-x-0 flex justify-center overflow-hidden pointer-events-none">
      <div class="w-[108rem] flex-none flex justify-start md:justify-end">
        <img src="/images/base/soft-pattern.png" class="w-[71.75rem] flex-none max-w-none dark:hidden" />
        <img src="/images/base/soft-pattern-dark.png" class="w-[71.75rem] flex-none max-w-none hidden dark:block" />
      </div>
    </div>
    <Nav />
    <main class="flex flex-col flex-1 px-4 sm:px-0 w-full sm:w-1/2 m-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
