---
import { twMerge } from 'tailwind-merge'

interface Props {
  element?: any
  className?: string
}

const { element: Element = 'h1', className } = Astro.props
---

<Element
  class={twMerge(
    'font-extrabold text-pretty',
    Element === 'h1' ? 'tracking-tighter' : 'tracking-tight',
    Element === 'h1' && 'text-3xl md:text-5xl',
    Element === 'h2' && 'text-2xl',
    Element === 'h3' && 'text-lg',
    className
  )}
>
  <slot />
</Element>
